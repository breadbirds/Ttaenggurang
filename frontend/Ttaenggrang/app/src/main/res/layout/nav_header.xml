<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/navHeaderEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test@naver.com"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/navHeaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navHeaderEmail" />

    <TextView
        android:id="@+id/navHeaderUserRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교사"
        app:layout_constraintStart_toEndOf="@+id/navHeaderName"
        app:layout_constraintTop_toTopOf="@+id/navHeaderName" />

    <ImageButton
        android:id="@+id/navHeaderSetting"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_setting"
        app:layout_constraintBottom_toBottomOf="@+id/navHeaderName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/navHeaderEmail" />


</androidx.constraintlayout.widget.ConstraintLayout>
