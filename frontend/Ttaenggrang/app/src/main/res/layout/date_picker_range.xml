<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spacing_20"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linerTaxDateHeader"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_rounded_15"
        android:backgroundTint="@color/lightOrange"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/datePickerContainer"
        app:layout_constraintEnd_toEndOf="@+id/datePickerContainer">

        <TextView
            style="@style/heading4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="시작 날짜"
            android:layout_weight="1"/>

        <TextView
            style="@style/heading4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="종료 날짜"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- 날짜 선택 영역 -->
    <LinearLayout
        android:id="@+id/datePickerContainer"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/linerTaxDateHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- 시작 날짜 선택 -->
        <DatePicker
            android:id="@+id/datePickerStart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:datePickerMode="calendar"
            android:theme="@style/CustomCalendarStyle"
            android:calendarViewShown="false"
            android:headerBackground="@color/mainOrange"
            android:background="@drawable/btn_rounded_border"
            android:backgroundTint="@color/mainOrange"/>

        <!-- 종료 날짜 선택 -->
        <DatePicker
            android:id="@+id/datePickerEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:datePickerMode="calendar"
            android:theme="@style/CustomCalendarStyle"
            android:headerBackground="@color/mainOrange"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_rounded_border"
            android:backgroundTint="@color/mainOrange"/>

    </LinearLayout>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/datePickerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 취소 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseConfirmDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="취소"
            app:cornerRadius="6dp"
            android:backgroundTint="@color/white"
            style="@style/heading4"
            android:textColor="@color/black"
            app:strokeColor="@color/lightGray"
            app:strokeWidth="1dp"/>

        <!-- 확인 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="날짜 확인"
            app:cornerRadius="6dp"
            android:backgroundTint="@color/mainOrange"
            style="@style/heading4"
            android:textColor="@color/white"/>
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>