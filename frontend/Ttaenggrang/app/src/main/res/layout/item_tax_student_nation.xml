<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="539dp"
    android:layout_height="42dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textDateNationTax"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2025.01.30"
            style="@style/body2"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textTitleNationTax"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="과자"
            style="@style/body2"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textDescriptionNationTax"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:text="국가를 위한 과자 구매"
            style="@style/body2"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textAmountNationTax"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="100,000"
            style="@style/body2"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>