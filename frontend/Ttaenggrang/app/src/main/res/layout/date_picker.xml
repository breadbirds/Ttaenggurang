<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <DatePicker
        android:id="@+id/datePickerSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="calendar"
        android:headerBackground="@color/mainOrange"
        android:theme="@style/CustomCalendarStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="@dimen/spacing_20"
        android:id="@+id/bottomButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/datePickerSelect"
        app:layout_constraintStart_toStartOf="@+id/datePickerSelect"
        app:layout_constraintTop_toBottomOf="@+id/datePickerSelect">

        <com.google.android.material.button.MaterialButton
            android:layout_marginEnd="@dimen/spacing_10"
            android:id="@+id/btnCloseConfirmDate"
            style="@style/heading4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="취소"
            android:textColor="@color/black"
            app:cornerRadius="6dp"
            app:strokeColor="@color/lightGray"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmDate"
            style="@style/heading4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/mainOrange"
            android:text="날짜 확인"
            android:textColor="@color/white"
            app:cornerRadius="6dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>