<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="504dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_20"
    android:background="@drawable/btn_rounded_full"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <!-- Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            style="@style/heading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학생 추가 등록"/>
        
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_close"/>
    </LinearLayout>

    <!-- Image -->
    <ImageView
        android:layout_marginVertical="@dimen/spacing_20"
        android:layout_gravity="center"
        android:layout_width="190dp"
        android:layout_height="220dp"
        android:background="@drawable/ic_launcher_background"/>

    <!-- 이름 -->
    <TextView
        style="@style/body2"
        android:textColor="@color/deepBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"/>
    <EditText
        android:id="@+id/editAddName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_10"
        android:hint="이름을 입력하세요" />

    <!-- 직업 -->
    <TextView
        style="@style/body2"
        android:textColor="@color/deepBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="직업"/>
    <EditText
        android:id="@+id/editJob"
        android:layout_marginBottom="@dimen/spacing_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="직업을 입력하세요"/>


    <!-- 직업 -->
    <TextView
        style="@style/body2"
        android:textColor="@color/deepBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"/>
    <EditText
        android:id="@+id/editId"
        android:layout_marginBottom="@dimen/spacing_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디를 입력하세요"/>

    <!-- 비밀번호 -->
    <TextView
        style="@style/body2"
        android:textColor="@color/deepBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"/>
    <EditText
        android:id="@+id/editPassword"
        android:layout_marginBottom="@dimen/spacing_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStudentRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_full"
        android:textColor="@color/white"
        android:text="추가"/>
</LinearLayout>