<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="480dp"
    android:layout_height="600dp"
    android:background="@drawable/btn_rounded_full"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_20">


<!--    <androidx.appcompat.widget.AppCompatButton-->
<!--        android:id="@+id/btnDialogClose"-->
<!--        android:layout_width="32dp"-->
<!--        android:layout_height="32dp"-->
<!--        android:background="@drawable/ic_close"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/textVoteTitle"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="@+id/textVoteTitle" />-->

    <TextView
        android:id="@+id/textVoteTitle"
        style="@style/heading3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타이틀 영역"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/textVoteDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2025.01.25 ~ 2025.02.18"
        app:layout_constraintStart_toStartOf="@+id/textVoteTitle"
        app:layout_constraintTop_toBottomOf="@+id/textVoteTitle" />


    <ImageView
        android:layout_marginTop="@dimen/spacing_20"
        android:layout_marginHorizontal="@dimen/spacing_20"
        android:id="@+id/imgVote"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_vote"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVoteDate" />

    <!-- 1위 -->
    <LinearLayout
        android:layout_marginTop="@dimen/spacing_20"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/textVoteTitle"
        app:layout_constraintTop_toBottomOf="@+id/imgVote">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rounded_full"
                android:text="1위"
                android:textColor="@color/lightOrange" />

            <TextView
                android:id="@+id/textRankFirstName"
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:text="서미지" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvVoteCountFirst"
                style="@style/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 명"
                android:textColor="@color/black200" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarFirst"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/spacing_10"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bar_basic" />
    </LinearLayout>

    <!-- 2위 -->
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_20"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rounded_full"
                android:backgroundTint="@color/lightOrange"
                android:text="2위"
                android:textColor="@color/mainOrange" />

            <TextView
                android:id="@+id/textRankSecondName"
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:text="서미지" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvVoteCountSecond"
                style="@style/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 명"
                android:textColor="@color/black200" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarSecond"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/spacing_10"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bar_basic" />
    </LinearLayout>

    <!-- 3위 -->
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_20"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rounded_full"
                android:backgroundTint="@color/lightGray"
                android:text="2위"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textRankThirdName"
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:text="서미지" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvVoteCountThird"
                style="@style/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 명"
                android:textColor="@color/black200" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarThird"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/spacing_10"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bar_basic" />
    </LinearLayout>

    <!-- 하단 버튼 영역 -->
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/btDialogCancel"-->
<!--            style="@style/heading3"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginRight="@dimen/spacing_10"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/btn_rounded_border"-->
<!--            android:backgroundTint="@color/lightGray"-->
<!--            android:text="뒤로"-->
<!--            android:textColor="@color/deepBlack" />-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDialogConfirm"
            style="@style/heading3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_rounded_full"
            android:text="확인"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_20"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:textColor="@color/black300"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="투표 참여 인원 " />

        <TextView
            android:textColor="@color/black300"
            style="@style/caption"
            android:id="@+id/textVoteTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="31명" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>