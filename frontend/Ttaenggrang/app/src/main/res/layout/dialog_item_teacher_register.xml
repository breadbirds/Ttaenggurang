<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="516dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/ic_close"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginStart="26dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 등록"
            style="@style/heading3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이템을 등록하세요"
            style="@style/body1"
            android:textColor="@color/lightGray"
            android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품명"
            style="@style/heading4"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="468dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_rounded_20"
            app:boxStrokeWidth="1dp"
            app:boxStrokeColor="@color/lightGray"
            android:textColorHint="@color/lightGray"
            android:layout_marginTop="6dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editNameRegisterItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="미지 교환권"
                android:paddingStart="14dp"
                style="@style/body1"
                android:textColor="@color/lightGray"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한 줄 설명"
            style="@style/heading4"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="468dp"
            android:layout_height="85dp"
            android:background="@drawable/bg_rounded_20"
            app:boxStrokeWidth="1dp"
            app:boxStrokeColor="@color/lightGray"
            android:textColorHint="@color/lightGray"
            app:boxBackgroundMode="outline"
            android:layout_marginTop="6dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDescriptionRegisterItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="미지미지 교환권"
                android:paddingStart="14dp"
                android:paddingTop="11dp"
                style="@style/body1"
                android:textColor="@color/lightGray"
                android:gravity="top|start" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 금액"
            style="@style/heading4"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="468dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_rounded_20"
            app:boxStrokeWidth="1dp"
            app:boxStrokeColor="@color/lightGray"
            android:textColorHint="@color/lightGray"
            android:layout_marginTop="6dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPriceRegisterItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="10,000"
                android:paddingStart="14dp"
                style="@style/body1"
                android:textColor="@color/lightGray"/>
        </com.google.android.material.textfield.TextInputLayout>






</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/heading4"
            android:layout_width="228dp"
            android:layout_height="44dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/bg_rounded_15"
            android:text="취소"
            android:textColor="@color/black"
            app:cornerRadius="6dp"
            app:strokeColor="@color/black"
            app:strokeWidth="0.75dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="228dp"
            android:layout_height="44dp"
            android:src="@drawable/bg_rounded_15"
            android:backgroundTint="@color/mainOrange"
            app:cornerRadius="6dp"
            android:text="등록하기"
            app:backgroundTint="@color/mainOrange"
            android:textColor="@color/white"
            style="@style/heading4"
            android:layout_marginStart="11dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>