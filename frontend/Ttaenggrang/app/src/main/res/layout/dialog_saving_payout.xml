    <TextView
        android:id="@+id/textDialogTitle2"
        style="@style/body3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지급금액"
        android:layout_marginVertical="@dimen/spacing_20"
        app:layout_constraintEnd_toStartOf="@id/textDialogContent2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDialogTitle"
        app:layout_constraintBottom_toTopOf="@id/btnDialogConfirm"/>

    <TextView
        android:id="@+id/textDialogContent2"
        style="@style/body3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,000"
        app:layout_constraintStart_toEndOf="@id/textDialogTitle2"
        app:layout_constraintTop_toTopOf="@id/textDialogTitle2"
        app:layout_constraintEnd_toEndOf="parent"
         />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDialogConfirm"
        style="@style/heading4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/spacing_20"
        app:layout_constraintTop_toBottomOf="@id/textDialogTitle2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textDialogTitle2"
        app:layout_constraintEnd_toEndOf="@+id/textDialogContent2"
        android:background="@drawable/btn_rounded_full"
        android:text="확인"
        android:textColor="@color/white" />


