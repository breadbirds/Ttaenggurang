<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="horizontal"
    android:padding="40dp"
    tools:context=".ui.stock.StockStudentFragment">

    <!-- 배너 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintBannerArea"
        android:layout_width="696dp"
        android:layout_height="126dp"
        android:background="@drawable/img_banner"
        app:layout_constraintBottom_toTopOf="@+id/constraintStockGraphArea"
        app:layout_constraintEnd_toStartOf="@id/constraintTradeArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 텍스트 추가 -->
        <TextView
            android:id="@+id/textBannerHead"
            style="@style/heading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_20"
            android:layout_marginTop="@dimen/spacing_20"
            android:text="주식"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textInfo"
            style="@style/body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_20"
            android:text="주식 탭에서는 기업의 공시 정보를 확인하고, 주식 매수 여부를 신중하게 고민할 수 있어요!"
            android:textColor="@color/foundation_black_50"
            app:layout_constraintBottom_toTopOf="@id/textInfo2"
            app:layout_constraintStart_toStartOf="@id/constraintBannerArea"
            app:layout_constraintTop_toBottomOf="@+id/textBannerHead" />

        <TextView
            android:id="@+id/textInfo2"
            style="@style/body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_20"
            android:layout_marginBottom="@dimen/spacing_20"
            android:text="똑똑한 투자로 자산을 성장시켜요!"
            android:textColor="@color/foundation_black_50"
            app:layout_constraintBottom_toBottomOf="@id/constraintBannerArea"
            app:layout_constraintStart_toStartOf="@id/constraintBannerArea"
            app:layout_constraintTop_toBottomOf="@+id/textInfo" />


        <!-- ImageView를 감쌀 FrameLayout 추가 -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_20"
            android:clipChildren="true"
            android:clipToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 이미지 추가 (크게 설정해서 배너 바깥으로 넘기기) -->
            <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fox_coins"
                android:translationX="20dp"
                android:translationY="20dp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--주식 그래프-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintStockGraphArea"
        android:layout_width="696dp"
        android:layout_height="341dp"
        android:layout_marginTop="@dimen/spacing_20"
        android:layout_marginEnd="@dimen/spacing_20"
        android:background="@drawable/bg_rounded_15"
        android:paddingHorizontal="@dimen/spacing_20"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintNewsArea"
        app:layout_constraintEnd_toStartOf="@id/constraintStockListArea"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintBannerArea">

        <!--주식그래프 헤더-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintStockGraphHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageHeadStock"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_jyp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textHeadStockName"
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:gravity="center_vertical"
                android:text="제이와이피 JYP"
                app:layout_constraintBottom_toBottomOf="@id/imageHeadStock"
                app:layout_constraintStart_toEndOf="@id/imageHeadStock"
                app:layout_constraintTop_toTopOf="@id/imageHeadStock" />

            <TextView
                android:id="@+id/textHeadStockPrice"
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100,000"
                app:layout_constraintBottom_toTopOf="@id/textHeadStockChange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageHeadStock" />

            <TextView
                android:id="@+id/textStockInfo"
                style="@style/heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_10"
                android:text="전일대비"
                android:textColor="@color/foundation_black_200"
                app:layout_constraintBottom_toBottomOf="@id/textHeadStockChange"
                app:layout_constraintEnd_toStartOf="@id/textHeadStockChange"
                app:layout_constraintTop_toTopOf="@id/textHeadStockChange" />

            <TextView
                android:id="@+id/textHeadStockChange"
                style="@style/heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1.10%"
                android:textColor="@color/foundation_green_600"
                app:layout_constraintBottom_toBottomOf="@id/imageHeadStock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textHeadStockPrice" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--구분선-->
        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="5dp"
            android:background="@color/foundation_black_50"
            app:layout_constraintBottom_toTopOf="@+id/textTab3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintStockGraphHead" />

        <TextView
            android:id="@+id/textTab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10"
            android:background="@drawable/tab"
            android:text="1주"
            android:paddingHorizontal="@dimen/spacing_10"
            android:paddingVertical="3dp"
            style="@style/caption"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine"
            app:layout_constraintEnd_toStartOf="@+id/textTab4"/>
        <TextView
            android:id="@+id/textTab4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1달"
            style="@style/caption"
            android:paddingHorizontal="@dimen/spacing_10"
            android:paddingVertical="3dp"
            android:textColor="@color/black"
            android:background="@drawable/tab"
            android:layout_marginStart="@dimen/spacing_10"
            app:layout_constraintTop_toTopOf="@id/textTab3"
            app:layout_constraintBottom_toBottomOf="@id/textTab3"
            app:layout_constraintStart_toEndOf="@id/textTab3"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--주식 뉴스-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintNewsArea"
        android:layout_width="696dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_20"
        android:padding="@dimen/spacing_20"
        android:background="@drawable/bg_rounded_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/constraintStockListArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintStockGraphArea">

        <!--뉴스 내용-->
        <TextView
            android:id="@+id/textNewsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025.01.31"
            style="@style/body2"
            android:textColor="@color/black200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textNewsTitle"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/textNewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“넥슨, 신규 게임 흥행 기대 속 실적 부담 지속”"
            style="@style/heading3"
            app:layout_constraintTop_toBottomOf="@id/textNewsDate"
            app:layout_constraintBottom_toTopOf="@id/textNewsContent"
            app:layout_constraintStart_toStartOf="@id/textNewsDate"/>
        <TextView
            android:id="@+id/textNewsContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/body1"
            android:text="넥슨이 최근  게임을 출시하며 기대를 모으고 있지만, 실적 성장 여부에 대한 투자자들의 신중한 판단이 필요한 시점입니다. 넥슨은 이번 분기에 신작 게임을 선보이며 글로벌 시장에서 좋은 반응을 얻고 있다고 밝혔습니다. 하지만 게임 개발비용 증가와 경쟁 심화로 인해 수익성이 개선될지는 아직 불확실한 상황입니다.
한 금융 전문가는 ** 신작 게임이 성공하면 향후 넥슨의 매출 확대에 긍정적인   줄 수 있지만, 시장의 반응을 조금 더 지켜볼 필요가 있다**고 전했습니다.
        이에 따라 투자자들은 넥슨의 향후 업데이트 전략과 실적 발표를 확인한 후 신중한 투자를 고려할 필요가 있습니다."
            android:textColor="@color/black200"
            app:layout_constraintTop_toBottomOf="@id/textNewsTitle"
            app:layout_constraintStart_toStartOf="@+id/textNewsDate"
            app:layout_constraintEnd_toStartOf="@id/frameLayout1"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <FrameLayout
            android:layout_marginStart="@dimen/spacing_20"
            android:id="@+id/frameLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_20"
            android:clipChildren="true"
            android:clipToPadding="true"
            app:layout_constraintStart_toEndOf="@id/textNewsContent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 이미지 추가 (크게 설정해서 배너 바깥으로 넘기기) -->
            <ImageView
                android:id="@+id/newsImage"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fox_coins"
                android:translationX="20dp"
                android:translationY="20dp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/btnNewsHistory"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/btn_rounded_full"
            android:gravity="center"
            android:paddingHorizontal="@dimen/spacing_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textNewsDate"
            app:layout_constraintBottom_toBottomOf="@id/textNewsDate"

            >

            <TextView
                style="@style/heading5"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주간보고서 확인"
                android:textColor="@color/white" />

            <ImageView
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_chevron_right" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--거래 뷰-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintTradeArea"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:layout_marginStart="@dimen/spacing_20"
        android:background="@drawable/bg_rounded_15"
        android:paddingHorizontal="@dimen/spacing_20"
        android:paddingVertical="@dimen/spacing_15"
        app:layout_constraintBottom_toTopOf="@id/constraintStockListArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintBannerArea"
        app:layout_constraintTop_toTopOf="parent">

        <!--거래가능 현금 뷰-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintTradeCash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/constraintProfit"
            app:layout_constraintEnd_toStartOf="@id/constraintProfit"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/constraintTradeArea"
            app:layout_constraintTop_toTopOf="parent">

            <!--거래가능현금-->
            <TextView
                android:id="@+id/textTradeHead1"
                style="@style/heading5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거래 가능 현금"
                android:textColor="@color/black200"
                app:layout_constraintStart_toStartOf="@id/constraintTradeCash"
                app:layout_constraintTop_toTopOf="@id/constraintTradeCash" />

            <ImageButton
                android:id="@+id/btnArrowRight"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:backgroundTint="@color/transparent"
                android:padding="0dp"
                android:src="@drawable/ic_chevron_right"
                app:layout_constraintBottom_toBottomOf="@id/textTradeHead1"
                app:layout_constraintStart_toEndOf="@id/textTradeHead1"
                app:layout_constraintTop_toTopOf="@id/textTradeHead1"
                app:tint="@color/black200" />

            <!--거래 가능 현금 금액-->
            <TextView
                android:id="@+id/textTradeInfo1"
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100,000,000"
                app:layout_constraintStart_toStartOf="@id/constraintTradeCash"
                app:layout_constraintTop_toBottomOf="@id/textTradeHead1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--수익률 뷰-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintProfit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/constraintTradeCash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/constraintTradeCash"
            app:layout_constraintTop_toTopOf="@id/constraintTradeCash">

            <!--수익률-->
            <TextView
                android:id="@+id/textProfitHead"
                style="@style/heading5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수익률"
                android:textColor="@color/black200"
                app:layout_constraintStart_toStartOf="@id/constraintProfit"
                app:layout_constraintTop_toTopOf="@id/constraintProfit" />


            <!--수익률 금액-->
            <TextView
                android:id="@+id/textProfitinfo"
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_10"
                android:text="100,0000000"
                app:layout_constraintBottom_toBottomOf="@id/constraintProfit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textProfitHead" />

            <!--수익률 증감-->
            <TextView
                android:id="@+id/textProfitinfo2"
                style="@style/heading4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:text="+0.01%"
                android:textColor="@color/foundation_green_600"
                app:layout_constraintBottom_toBottomOf="@id/textProfitHead"
                app:layout_constraintStart_toEndOf="@+id/textProfitHead"
                app:layout_constraintTop_toTopOf="@id/textProfitHead" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--거래 버튼-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTrade"
            style="@style/heading4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_10"
            android:background="@drawable/btn_rounded_full"
            android:text="거래"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/constraintTradeArea"
            app:layout_constraintEnd_toEndOf="@id/constraintProfit"
            app:layout_constraintStart_toStartOf="@id/constraintTradeCash"
            app:layout_constraintTop_toBottomOf="@+id/constraintTradeCash" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--주식 리스트-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintStockListArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_20"
        android:layout_marginTop="@dimen/spacing_20"
        android:background="@drawable/bg_rounded_15"
        android:paddingHorizontal="@dimen/spacing_20"
        android:paddingVertical="@dimen/spacing_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/constraintNewsArea"
        app:layout_constraintTop_toBottomOf="@id/constraintTradeArea">

        <!--주식리스트 제목-->
        <TextView
            android:id="@+id/textStockListHead"
            style="@style/heading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주식"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@id/textStockListHead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textStockListHead" />

        <!--탭 버튼-->
        <TextView
            android:id="@+id/textTab1"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10"
            android:background="@drawable/tab"
            android:paddingHorizontal="@dimen/spacing_10"
            android:paddingVertical="3dp"
            android:text="일반주식"
            android:textColor="@color/foundation_black_500"
            app:layout_constraintStart_toStartOf="@id/textStockListHead"
            app:layout_constraintTop_toBottomOf="@id/textStockListHead" />

        <TextView
            android:id="@+id/textTab2"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/tab"
            android:paddingHorizontal="@dimen/spacing_10"
            android:paddingVertical="3dp"
            android:text="ETF"
            android:textColor="@color/foundation_black_500"
            app:layout_constraintBottom_toBottomOf="@id/textTab1"
            app:layout_constraintStart_toEndOf="@id/textTab1"
            app:layout_constraintTop_toTopOf="@id/textTab1" />

        <!--주식리스트-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerStockList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTab1"

            >

        </androidx.recyclerview.widget.RecyclerView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>