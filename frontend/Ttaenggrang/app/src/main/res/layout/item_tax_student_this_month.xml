<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="963dp"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textDateTaxThisMonth"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="2025.01.30"
            style="@style/body2"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textTitleTaxThisMonth"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:text="세금1"
            style="@style/body2"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textDescriptionTaxThisMonth"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:text="세금입니다"
            style="@style/body2"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textRateTaxThisMonth"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="10%"
            style="@style/body2"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textAmountTaxThisMonth"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:text="50,000"
            style="@style/body2"
            android:gravity="center"/>
        
        <FrameLayout
            android:layout_width="93dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_close"
                android:layout_gravity="center"/>
        </FrameLayout>
<!--        <TextView-->
<!--            android:id="@+id/textIsPaid"-->
<!--            android:layout_width="93dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text=""-->
<!--            style="@style/body2"-->
<!--            android:gravity="center"/>-->
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>