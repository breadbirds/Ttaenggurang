<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.nation.NationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/textNationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/clNationImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="대한민국"
            style="@style/heading1"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clNationImg"
            android:layout_width="match_parent"
            android:layout_height="318dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="112dp"
            android:background="@color/lightGray">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/clNationImg"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="40dp">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="@+id/clNationInfo"
                app:layout_constraintEnd_toStartOf="@+id/clNationInfo"
                android:layout_marginEnd="40dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clVoteIc"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_rounded_15"
                    android:backgroundTint="@color/lightOrange"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_finance"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/textVote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/heading3"
                    android:text="국민 투표 현황"
                    app:layout_constraintStart_toEndOf="@+id/clVoteIc"
                    app:layout_constraintTop_toTopOf="@+id/clVoteIc"
                    app:layout_constraintBottom_toBottomOf="@id/clVoteIc"
                    android:paddingHorizontal="@dimen/spacing_10"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_setting"
                    android:tint="@color/lightGray"
                    app:layout_constraintStart_toEndOf="@id/textVote"
                    app:layout_constraintTop_toTopOf="@+id/clVoteIc"
                    app:layout_constraintBottom_toBottomOf="@+id/clVoteIc"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clVoteIc"
                    android:paddingStart="@dimen/spacing_20"
                    android:layout_marginTop="@dimen/spacing_20">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025.01.03 ~ 2025.01.15"
                        style="@style/body2"
                        android:textColor="@color/lightGray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이번주 우수 학급 투표"
                        style="@style/heading2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="투표하러 가기"
                        style="@style/heading3"
                        android:textColor="@color/mainGreen"
                        android:layout_marginTop="80dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clNationInfo"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <View
                    android:id="@+id/lineNationInfo"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/backgroundGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clFinanceIc"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_rounded_15"
                    android:backgroundTint="@color/lightOrange"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/spacing_20">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_finance"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/textInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/heading3"
                    android:text="국가 정보"
                    app:layout_constraintStart_toEndOf="@+id/clFinanceIc"
                    app:layout_constraintTop_toTopOf="@+id/clFinanceIc"
                    app:layout_constraintBottom_toBottomOf="@id/clFinanceIc"
                    android:paddingHorizontal="@dimen/spacing_10"/>
                <ImageView
                    android:id="@+id/btnNationInfo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_setting"
                    android:tint="@color/lightGray"
                    app:layout_constraintStart_toEndOf="@id/textInfo"
                    app:layout_constraintTop_toTopOf="@+id/clFinanceIc"
                    app:layout_constraintBottom_toBottomOf="@+id/clFinanceIc"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clFinanceIc"
                    android:paddingStart="@dimen/spacing_40"
                    android:layout_marginTop="@dimen/spacing_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="국가 설립일"
                        style="@style/body2"
                        android:textColor="@color/lightGray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025.01.03"
                        style="@style/heading3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="화폐 단위"
                        style="@style/body2"
                        android:textColor="@color/lightGray"
                        android:layout_marginTop="@dimen/spacing_20"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="미소"
                        style="@style/heading3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="학급 인원"
                        style="@style/body2"
                        android:textColor="@color/lightGray"
                        android:layout_marginTop="@dimen/spacing_20"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32명"
                        style="@style/heading3"/>
                </LinearLayout>
                
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="@+id/clNationInfo"
                app:layout_constraintStart_toEndOf="@+id/clNationInfo"
                android:layout_marginStart="40dp">

                <View
                    android:id="@+id/lineAsset"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/backgroundGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clDollarIc"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_rounded_15"
                    android:backgroundTint="@color/lightOrange"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/spacing_20">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_finance"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/textGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/heading3"
                    android:text="목표 자산 설정"
                    app:layout_constraintStart_toEndOf="@+id/clDollarIc"
                    app:layout_constraintTop_toTopOf="@+id/clDollarIc"
                    app:layout_constraintBottom_toBottomOf="@id/clDollarIc"
                    android:paddingHorizontal="@dimen/spacing_10"/>

                <ImageButton
                    android:id="@+id/btnGoalSavings"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_setting"
                    app:layout_constraintStart_toEndOf="@id/textGoal"
                    app:layout_constraintTop_toTopOf="@+id/clDollarIc"
                    app:layout_constraintBottom_toBottomOf="@+id/clDollarIc"
                    app:tint="@color/lightGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clDollarIc"
                    android:layout_marginTop="@dimen/spacing_20"
                    android:paddingStart="@dimen/spacing_40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 자산 금액"
                        style="@style/body2"
                        android:textColor="@color/lightGray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000,000 미소"
                        style="@style/heading3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자산 순위"
                        style="@style/body2"
                        android:textColor="@color/lightGray"
                        android:layout_marginTop="@dimen/spacing_30"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_score1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="김철수: 342,000 미소"
                            style="@style/body1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_score1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="김철수: 342,000 미소"
                            style="@style/body1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_score1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="김철수: 342,000 미소"
                            style="@style/body1"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>