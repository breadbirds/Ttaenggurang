<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <!--헤더-->
    <LinearLayout
        android:layout_width="585dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세금 납부 내역"
            style="@style/heading1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_close"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearTaxHistoryStudentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/textTaxHistoryStudentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서미지"
                    style="@style/heading3"/>
                <TextView
                    android:id="@+id/textTaxHistoryStudentJobPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="의사(10,000,000)"
                    style="@style/heading4"
                    android:textColor="@color/lightGray"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/lightGray"
                app:layout_constraintStart_toStartOf="@+id/linearTaxHistoryStudentInfo"
                app:layout_constraintEnd_toEndOf="@+id/linearTaxHistoryStudentInfo"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <!--날짜 선택 버튼 영역-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cornerRadius="4dp"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/img_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="9dp"/>
            <!--선택 날짜 보여주는 텍스트-->
            <TextView
                android:id="@+id/textTaxHistoryStudentDateStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025/01/01"
                app:layout_constraintStart_toEndOf="@+id/img_calender"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/body2"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/imgTaxHistoryStudentDateStart"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_chevron_down"
                app:layout_constraintStart_toEndOf="@+id/textTaxHistoryStudentDateStart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="9dp"/>

            <TextView
                android:id="@+id/textTaxHistoryStudentDateEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025/01/01"
                app:layout_constraintStart_toEndOf="@+id/imgTaxHistoryStudentDateStart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/body2"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/imgTaxHistoryStudentDateEnd"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_chevron_down"
                app:layout_constraintStart_toEndOf="@+id/textTaxHistoryStudentDateEnd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="9dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!--학생 세금 납부 내역 리스트 테이블 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_marginTop="20dp">

        <!-- 테이블 헤더-->
        <LinearLayout
            android:id="@+id/linerTaxHistoryTableHeader"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_rounded_15"
            android:backgroundTint="@color/lightOrange"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                style="@style/heading4"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="날짜" />

            <TextView
                style="@style/heading4"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="세금명" />

            <TextView
                style="@style/heading4"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="이자율" />

            <TextView
                style="@style/heading4"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="납부 금액" />

        </LinearLayout>

        <TextView
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/textNullStudentTaxPayHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세금 납부 내역이 없습니다."
            app:layout_constraintTop_toBottomOf="@id/linerTaxHistoryTableHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/body2"
            android:textColor="@color/lightGray" />

        <!--테이블 내용-->
        <!-- 개별 아이템은 item_tax_teacher_student_history.xml-->
        <androidx.recyclerview.widget.RecyclerView
            tools:visibility="gone"
            android:id="@+id/recyclerStudentTaxPayHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linerTaxHistoryTableHeader" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 납부 금액"
            style="@style/heading3"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/textStudentHistoryTaxAmount"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/heading3"
            android:text="100,000"
            android:gravity="end" />
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCloseStudenTaxHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_full"
        android:textColor="@color/white"
        android:text="닫기"
        style="@style/heading3"
        android:layout_marginTop="30dp" />

</LinearLayout>