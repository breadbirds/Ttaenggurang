<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="516dp"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국세 사용하기"
            style="@style/heading3"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_close"/>
    </LinearLayout>

    <TextView
        style="@style/body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="국가를 위한 세금 사용 내역입니다"
        android:textColor="@color/lightGray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 내역"
        style="@style/heading4"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_20"
        android:textColorHint="@color/lightGray"
        app:boxStrokeColor="@color/lightGray"
        app:boxStrokeWidth="1dp"
        android:layout_marginTop="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editUseTaxName"
            style="@style/body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="사용 내역 이름을 작성하세요"
            android:paddingStart="14dp"
            android:textColor="@color/lightGray" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금액"
        style="@style/heading4"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_20"
        android:textColorHint="@color/lightGray"
        app:boxStrokeColor="@color/lightGray"
        app:boxStrokeWidth="1dp"
        android:layout_marginTop="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editUseTaxAmount"
            style="@style/body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="사용할 금액을 작성하세요"
            android:paddingStart="14dp"
            android:textColor="@color/lightGray" />

    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설명"
        style="@style/heading4"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_20"
        android:textColorHint="@color/lightGray"
        app:boxStrokeColor="@color/lightGray"
        app:boxStrokeWidth="1dp"
        android:layout_marginTop="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editUseTaxDescription"
            style="@style/body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="사용 내역 설명을 작성하세요"
            android:paddingStart="14dp"
            android:textColor="@color/lightGray"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="3"
            />

    </com.google.android.material.textfield.TextInputLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUseNationTax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_full"
        android:textColor="@color/white"
        android:text="국세 사용하기"
        style="@style/heading4"
        android:layout_marginTop="30dp"/>
</LinearLayout>