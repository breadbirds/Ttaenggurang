    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutReportArea"
        android:layout_width="0dp"
        android:layout_height="133dp"
        android:layout_marginBottom="@dimen/spacing_20"
        android:background="@drawable/bg_rounded_15"
        android:padding="@dimen/spacing_20"
        app:layout_constraintBottom_toTopOf="@+id/constraintTableArea"
        app:layout_constraintEnd_toEndOf="@+id/btnAvgBalance"
        app:layout_constraintStart_toStartOf="@+id/constraintBannerArea"
        app:layout_constraintTop_toBottomOf="@+id/btnNationalRevenue">

        <TextView
            android:id="@+id/textAiTitle"
            style="@style/heading4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI 추천 활동"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textAiReport"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주간 보고서를 확인하고, "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textAiTitle" />

        <LinearLayout
            android:id="@+id/btnWeekReport"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/btn_rounded_border"
            android:gravity="center"
            android:paddingHorizontal="@dimen/spacing_10"
            app:layout_constraintBottom_toBottomOf="@+id/imgAiFox"
            app:layout_constraintEnd_toStartOf="@+id/imgAiFox"
            app:layout_constraintTop_toBottomOf="@+id/textAiReport">

            <TextView
                style="@style/heading5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주간보고서 확인"
                android:textColor="@color/mainGreen" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_chevron_right"
                android:backgroundTint="@color/mainGreen" />


        </LinearLayout>


        <ImageView
            android:id="@+id/imgAiFox"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@drawable/fox_coins"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--  학생 관리표  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintTableArea"
        android:layout_width="0dp"
        android:layout_height="327dp"
        android:background="@drawable/bg_rounded_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/constraintBannerArea"
        app:layout_constraintStart_toStartOf="@+id/constraintBannerArea"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutReportArea">


        <TextView
            android:id="@+id/textTransactionHistory"
            style="@style/heading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_20"
            android:text="거래 내역"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnStudentMore"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="@dimen/spacing_10"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_right"
            app:layout_constraintBottom_toBottomOf="@+id/textTransactionHistory"
            app:layout_constraintStart_toEndOf="@+id/textTransactionHistory"
            app:layout_constraintTop_toTopOf="@+id/textTransactionHistory" />

        <TextView
            android:id="@+id/textNullTransactionHistory"
            style="@style/body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록된 학생 정보가 없습니다."
            android:textColor="@color/lightGray"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTransactionHistory"
            tools:visibility="visible" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTransactionHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/spacing_30"
            android:layout_marginVertical="@dimen/spacing_20"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTransactionHistory"
            tools:visibility="gone" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 세로 중심 선 -->
    <View
        android:id="@+id/view"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/constraintAlarmArea"
        app:layout_constraintStart_toEndOf="@+id/constraintBannerArea"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 알람 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintAlarmArea"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_rounded_15"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayoutReportArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/constraintBannerArea"
        tools:ignore="NotSibling">

        <TextView
            android:id="@+id/textAlarm"
            style="@style/heading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_20"
            android:text="알림판"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_10"
            app:layout_constraintBottom_toBottomOf="@+id/textAlarm"
            app:layout_constraintStart_toEndOf="@+id/textAlarm"
            app:layout_constraintTop_toTopOf="@+id/textAlarm">  <!-- 터치 영역 확장 -->

            <ImageButton
                android:id="@+id/btnAlarmMore"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_chevron_right"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/textAlarm"
                app:layout_constraintStart_toEndOf="@+id/textAlarm"
                app:layout_constraintTop_toTopOf="@+id/textAlarm" />
        </FrameLayout>


        <TextView
            android:id="@+id/textNullAlarm"
            style="@style/body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록된 알림 정보가 없습니다"
            android:textColor="@color/lightGray"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textAlarm" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAlarm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/spacing_20"
            android:layout_marginVertical="@dimen/spacing_10"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textAlarm" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 수입/지출 차트 영역 -->
