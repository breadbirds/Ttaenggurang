            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/spacing_10"
            android:src="@drawable/ic_trophy" />

        <TextView
            style="@style/heading4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 순위" />

        <ImageButton
