        <!--탭-->
        <TextView
            android:id="@+id/textTab1"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10"
            android:background="@drawable/tab"
            android:paddingHorizontal="@dimen/spacing_10"
            android:paddingVertical="3dp"
            android:text="전체"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/textTab2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBankManageTitle" />

        <TextView
            android:id="@+id/textTab2"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_10"
            android:background="@drawable/tab"
            android:paddingHorizontal="@dimen/spacing_10"
            android:paddingVertical="3dp"
            android:text="예금"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/textTab1"
            app:layout_constraintStart_toEndOf="@id/textTab1"
            app:layout_constraintTop_toTopOf="@id/textTab1" />

        <TextView
            android:id="@+id/textTab3"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_10"
            android:background="@drawable/tab"
            android:paddingHorizontal="@dimen/spacing_10"
            android:paddingVertical="3dp"
            android:text="적금"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/textTab2"
            app:layout_constraintStart_toEndOf="@id/textTab2"
            app:layout_constraintTop_toTopOf="@id/textTab2" />

        <!--은행 상품 리스트-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerBankManageList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_20"
            android:layout_marginBottom="@dimen/spacing_10"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/viewLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTab1">

        </androidx.recyclerview.widget.RecyclerView>

        <!--구분선-->
        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/spacing_20"
            android:background="@color/foundation_black_50"
            app:layout_constraintBottom_toTopOf="@+id/textPayoutAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerBankManageList" />

        <TextView
            android:id="@+id/textPayoutAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 예상 지급 금액"
            style="@style/heading3"

            app:layout_constraintBottom_toBottomOf="@id/textPayoutAmount2"
            app:layout_constraintTop_toTopOf="@id/textPayoutAmount2"
            app:layout_constraintEnd_toStartOf="@id/textPayoutAmount2"

            />

        <TextView
            android:id="@+id/textPayoutAmount2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="100dp"
            style="@style/heading3"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--은행 상품 구매 뷰-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintTradeArea"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:layout_marginStart="@dimen/spacing_20"
        android:background="@drawable/bg_rounded_15"
        android:paddingHorizontal="@dimen/spacing_20"
        android:paddingVertical="@dimen/spacing_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintBannerArea"
        app:layout_constraintTop_toTopOf="parent">

        <!--일반 주식 뷰-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintStockArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btnDepositBuy"
            app:layout_constraintEnd_toStartOf="@+id/constraintEtfArea"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ic_bank1"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/ic_bank1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textDeposit"
                style="@style/heading5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:text="예금 상품"
                android:textColor="@color/black200"
                app:layout_constraintBottom_toTopOf="@id/textStockCnt"
                app:layout_constraintStart_toEndOf="@id/ic_bank1"
                app:layout_constraintTop_toTopOf="@id/ic_bank1" />

            <TextView
                android:id="@+id/textStockCnt"
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@id/ic_bank1"
                app:layout_constraintStart_toStartOf="@id/textDeposit"
                app:layout_constraintTop_toBottomOf="@id/textDeposit" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--적금 뷰-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintEtfArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_10"
            app:layout_constraintBottom_toBottomOf="@id/constraintStockArea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/constraintStockArea"
            app:layout_constraintTop_toTopOf="@id/constraintStockArea">

            <ImageView
                android:id="@+id/ic_bank2"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/ic_bank2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textDeposit2"
                style="@style/heading5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:text="적금 상품"
                android:textColor="@color/black200"
                app:layout_constraintBottom_toTopOf="@id/textDeposit2Cnt"
                app:layout_constraintStart_toEndOf="@id/ic_bank2"
                app:layout_constraintTop_toTopOf="@id/ic_bank2" />

            <TextView
                android:id="@+id/textDeposit2Cnt"
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@id/ic_bank2"
                app:layout_constraintStart_toStartOf="@id/textDeposit2"
                app:layout_constraintTop_toBottomOf="@id/textDeposit2" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--은행상품 구매 버튼-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            style="@style/heading4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_10"
            android:background="@drawable/btn_rounded_full"
            android:text="은행상품 구매하기"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintStockArea" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>