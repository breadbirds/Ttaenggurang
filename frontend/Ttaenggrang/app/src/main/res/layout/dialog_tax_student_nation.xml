<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="585dp"
    android:layout_height="wrap_content">

    <!--헤더-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="36.71dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국세 사용 내역"
            style="@style/heading1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/ic_close"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="36.71dp">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <!--날짜 선택 버튼 영역-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="121dp"
            android:layout_height="30dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="121dp"
                android:layout_height="30dp"
                app:cornerRadius="4dp"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/img_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="9dp"/>
            <!--선택 날짜 보여주는 텍스트-->
            <TextView
                android:id="@+id/textNationTaxDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025/01/01"
                app:layout_constraintStart_toEndOf="@+id/img_calender"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/body2"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_chevron_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="9dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!--국세청 사용 내역 리스트 테이블 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="539dp"
        android:layout_height="268dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp">

        <!-- 테이블 헤더-->
        <LinearLayout
            android:id="@+id/linerNationTableHeader"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_rounded_15"
            android:backgroundTint="@color/lightOrange"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                style="@style/heading4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="날짜" />

            <TextView
                style="@style/heading4"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="사용 내역" />

            <TextView
                style="@style/heading4"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="설명" />

            <TextView
                style="@style/heading4"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="금액" />

        </LinearLayout>

        <TextView
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/textNullNationTax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국세 사용 내역이 없습니다."
            app:layout_constraintTop_toBottomOf="@id/linerNationTableHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/body2"
            android:textColor="@color/lightGray" />

        <!--테이블 내용-->
        <androidx.recyclerview.widget.RecyclerView
            tools:visibility="gone"
            android:id="@+id/recyclerNationTax"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linerNationTableHeader" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCloseStudentNationTax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_full"
        android:textColor="@color/white"
        android:text="닫기"
        style="@style/heading3"
        android:layout_marginTop="36.71dp"
        android:layout_margin="36.71dp"/>

</LinearLayout>