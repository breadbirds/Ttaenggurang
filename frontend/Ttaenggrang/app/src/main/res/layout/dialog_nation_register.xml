<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="504dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/ic_close"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/heading4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구각 정보 등록" />

        <TextView
            style="@style/heading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="국가 운영을 위한 기본 정보 등록"
            android:textColor="@color/mainGreen" />

        <!-- 국가 이름-->
        <TextView
            style="@style/heading4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="국가 이름" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="468dp"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_rounded_20"
            android:textColorHint="@color/lightGray"
            app:boxStrokeColor="@color/lightGray"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="국가 이름을 입력하세요"
                android:paddingStart="14dp"
                android:textColor="@color/lightGray" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 화폐 단위 -->
        <TextView
            style="@style/heading4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="화폐 단위" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="468dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_rounded_20"
            android:textColorHint="@color/lightGray"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/lightGray"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|start"
                android:hint="화폐 단위를 입력하세요"
                android:paddingStart="14dp"
                android:paddingTop="11dp"
                android:textColor="@color/lightGray" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 학급 인원 -->
        <TextView
            style="@style/heading4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="학급 인원" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="468dp"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_rounded_20"
            android:textColorHint="@color/lightGray"
            app:boxStrokeColor="@color/lightGray"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex) 25"
                android:paddingStart="14dp"
                android:textColor="@color/lightGray" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 학급 인원 -->
        <TextView
            style="@style/heading4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="목표 자산 금액" />

        <TextView
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 금액을 목표로 아이들이 저축해요"
            android:textColor="@color/foundation_black_200" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="468dp"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_rounded_20"
            android:textColorHint="@color/lightGray"
            app:boxStrokeColor="@color/lightGray"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex) 25"
                android:paddingStart="14dp"
                android:textColor="@color/lightGray" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/spacing_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="228dp"
            android:layout_height="50dp"
            android:src="@drawable/bg_rounded_15"
            android:backgroundTint="@color/white"
            app:cornerRadius="6dp"
            app:strokeColor="@color/black"
            app:strokeWidth="0.75dp"
            android:text="취소"
            android:textColor="@color/black"
            style="@style/heading4"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="228dp"
            android:layout_height="50dp"
            android:src="@drawable/bg_rounded_15"
            android:backgroundTint="@color/mainOrange"
            app:cornerRadius="6dp"
            android:text="등록하기"
            app:backgroundTint="@color/mainOrange"
            android:textColor="@color/white"
            style="@style/heading4"
            android:layout_marginStart="11dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>